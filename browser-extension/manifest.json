{
  "manifest_version": 3,
  "name": "BriefBot URL Submitter",
  "version": "1.0.0",
  "description": "Submit URLs to BriefBot directly from your browser",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8080/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Submit to BriefBot",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
